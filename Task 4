using namespace std;
#include <iostream>
#include <string>

void bubblesort (string &str) {
    int n= str.length();
    
    for (int i=0;i< n-1; i++) {
        for (int j=0; j< n - i-1; j++) {
            if (str[j] > str[j+1]) {
                
                char temp= str[j];
                str[j]= str[j+1];
                str[j+1]= temp;
            }
        }
    }
}

bool areAnagrams (string word1, string word2) {
    if (word1.length() != word2.length())
    return false;
    
    bubblesort(word1);
    bubblesort(word2);
    
    return word1 == word2;
}

int main() {
    string first, second;
    cout << "Enter first word";
    cin >> first;
    cout << "Enter second word";
    cin >> second;
    
    if (areAnagrams (first, second))
    cout << "The words are anagrams";
    else
    cout << "The words are not anagrams";
}
